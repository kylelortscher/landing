<div class="blog-index">
  <div class="container">
    <% @blogs.each do |blog| %>
      <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
          <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
              <div class="blog-post-image">
                  <img src="https://assets.entrepreneur.com/content/3x2/274/1395347875-what-young-tech-companies-really-want.jpg" width="240" height="160">
              </div>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
              <div class="blog-post-title">
                <%= link_to blog do %>
                  <h2><%= blog.title %></h2>
                <% end %>
                <p><%= blog.body %></p>
              </div>
            </div>
          </div>
            <% if user_signed_in? %>
              <%= link_to 'Show', blog, class:"btn btn-primary btn-xs" %>
              <%= link_to 'Edit', edit_blog_path(blog), class:"btn btn-primary btn-xs" %>
              <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs" %>
            <% end %>
          </span>
          <hr>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-hidden">
          
        </div>
      </div>
    <% end %>
  </div>
</div>
